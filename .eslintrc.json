{
    "extends": [
        "plugin:react-native/all",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "plugins": [
        "react",
        "react-native",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "bracketSpacing": true,
                "jsxBracketSameLine": true,
                "parser": "flow",
                "singleQuote": true,
                "trailingComma": "all"
            }
        ],
        "react/display-name": 0,
        "react/prop-types": 0,
        "react-native/no-inline-styles": 0
    }
}
